{
  "name": "remix-template",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Odee <odjhey@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "tsc -b",
    "build": "remix build && tsc -b",
    "dev": "concurrently \"remix run\" \"tsc -b -w --preserveWatchOutput\" \"cross-env NODE_ENV=development nodemon -w app -w build -w data-build -e js,jsx,ts,tsx,md,mdx server.js\"",
    "start": "node server.js",
    "format": "prettier --write \"{app,data}/**/*.{ts,tsx,js,jsx}\""
  },
  "dependencies": {
    "@remix-run/cli": "^0.8.3",
    "@remix-run/data": "^0.8.3",
    "@remix-run/express": "^0.8.3",
    "@remix-run/react": "^0.8.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "morgan": "^1.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "12"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  }
}
